#!/usr/bin/env jruby

if RUBY_ENGINE !~ /jruby/
  puts "jplay_jukebox is intended for use with JRuby. Please try 'play_jukebox'"
  exit
end

begin
  require 'readline'
  require 'spoon'
rescue LoadError => e
  if e.message =~ /readline/
    puts "*** You must install 'readline' to use JimmyJukebox on JRuby ***"
    exit
  elsif e.message =~ /spoon/
    puts "*** You must install the 'spoon' gem to use JimmyJukebox on JRuby ***"
    exit
  else
    raise
  end
end

lib = File.expand_path('../lib', File.dirname(__FILE__))
$LOAD_PATH.unshift(lib) if File.directory?(lib) && !$LOAD_PATH.include?(lib)
require 'jimmy_jukebox'
include JimmyJukebox

